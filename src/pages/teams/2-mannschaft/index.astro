---
import BaseLayout from "../../../layouts/BaseLayout.astro";
---

<BaseLayout title="2. Mannschaft – TSG Messel">

  <!-- HERO -->
  <section class="hero hero--subpage">
    <div class="container">
      <h1>2. Mannschaft</h1>
      <p>Unsere 2. Mannschaft ist in der C-Liga Darmstadt aktiv.</p>
    </div>
  </section>

  <!-- TRAINERTEAM -->
  <section class="section section-alt">
    <div class="container">
      <h2>Trainerteam</h2>
      <div class="grid grid-3" style="margin-top: 2rem;">

        <div class="card person-card">
          <img src="/images/teams/2m/philipp-gerbig.jpg" alt="Philipp Gerbig" class="person-photo" />
          <h3>Trainer</h3>
          <p><strong>Philipp Gerbig</strong></p>
          <p>Tel.: 01573&nbsp;5707181</p>
        </div>

        <div class="card person-card">
          <img src="/images/teams/2m/co-trainer.jpg" alt="Co-Trainer 2. Mannschaft" class="person-photo" />
          <h3>Co-Trainer</h3>
          <p><strong>Co-Trainer 2. Mannschaft</strong></p>
          <p>(Daten werden noch ergänzt)</p>
        </div>

      </div>
    </div>
  </section>

  <!-- KADER -->
  <section class="section">
    <div class="container">
      <h2>Kader</h2>
      <p>Der Kader der 2. Mannschaft in der aktuellen Saison.</p>

      <div class="grid grid-3" style="margin-top: 2rem;">

        <!-- Beispielspieler -->
        <div class="card person-card">
          <img src="/images/teams/2m/spieler1.jpg" alt="Spieler 1" class="person-photo" />
          <h3>Spielername 1</h3>
        </div>

        <div class="card person-card">
          <img src="/images/teams/2m/spieler2.jpg" alt="Spieler 2" class="person-photo" />
          <h3>Spielername 2</h3>
        </div>

        <div class="card person-card">
          <img src="/images/teams/2m/spieler3.jpg" alt="Spieler 3" class="person-photo" />
          <h3>Spielername 3</h3>
        </div>

        {/*
          Weitere Spieler wie bei der 1. Mannschaft ergänzen.
        */}
      </div>
    </div>
  </section>

</BaseLayout>


